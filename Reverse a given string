  int countOfWord =  array.length;
  System.out.println("countOfWord "+countOfWord);
  System.out.println(Arrays.toString(array));
 

  // Converting string into the array of character
  char character [ ] = sentence.toCharArray();

   // Reverse String
    String s = "a";
    s = "b"+s; // ba
    s = "c"+s; //cba

  }

}

